<div class="container">
  <div class="row">
    <div class="offset-1">
      <h3 class="bg-light my-5 px-4">ジャンル編集</h3>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-2">
        <%= f.label :name, "ジャンル名", class: "ml-2 mt-3" %>
      </div>
      <div class="col-3">
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ケーキ", class: "form-control mt-2" %>
      </div>
      <div class="col-2">
        <%= f.submit "変更を保存", class: "btn btn-success btn-lg ml-5 px-5" %>
      </div>
    </div>
  <% end %>
</div>