<div class="container">
  <div class="row">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row">
      <div class="col-2">
        <%= f.label :name, "ジャンル名" %>
      </div>
      <div class="col-2">
        <%= f.text_field :name %>
      </div>
      <div class="col-2 offset-1">
        <%= f.submit "新規登録" %>
      </div>
    </div>
  <% end %>
  <table class="table table-borderless">
    <thead class="thead-light">
      <tr class="row">
        <th class="col-4 border-top border-bottom">ジャンル</th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr class="row">
        <td class="col-2 border-bottom"><%= genre.name %></td>
        <td class="col-2 border-bottom"><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>