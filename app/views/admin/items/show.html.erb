<div class="container">
  <div class="row">
    <div class="offset-2">
      <h3 class="bg-light my-5 px-4">商品詳細</h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3 offset-1">
      <%= image_tag @item.get_image(300,200), class: "mx-auto d-block" %>
    </div>
    <div class="col-6 offset-1">
      <div class="row">
        <div class="col-3">
          <p>商品名</p>
        </div>
        <div class="col-8">
          <p><%= @item.name %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <p>商品説明</p>
        </div>
        <div class="col-8">
          <p><%= @item.introduction %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <p>ジャンル</p>
        </div>
        <div class="col-8">
          <p><%= @item.genre.name %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <p>税込価格<br>(税抜価格)</p>
        </div>
        <div class="col-8">
          <p class="mt-2"><%= @item.with_tax_price %> (<%= @item.with_tax_free_price %>) 円</p>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <p>販売ステータス</p>
        </div>
        <div class="col-8">
          <% if @item.is_active %>
            <span class="text-success">販売中</span>
          <% else %>
            <span class="text-secondary">販売停止中</span>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="offset-2">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success px-5" %>
        </div>
      </div>
    </div>
  </div>
</div>