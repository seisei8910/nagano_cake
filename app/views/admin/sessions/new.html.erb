<div class="container">

  <div class="row">
    <h2 class="bg-light px-4 mt-5">管理者ログイン</h2>
  </div>

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <div class="row">
      <div class="col-2 offset-2">
        <%= f.label :email, "メールアドレス", class: "my-5" %>
        <%= f.label :password, "パスワード" %>
      </div>

      <div class="col-6 form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-5",
        placeholder: "sample@example.com"%><br>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary px-5 mt-5" %>
        </div>
      </div>
    </div>
  <% end %>
</div>