<!DOCTYPE html>
<html>
<head>
  <title>Admin - NaganoCake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <div class="container">
      <div class="row mt-5">
        <div class="col-3">
          <h1 class="border border-dark my-5 text-center">LOGO</h1>
        </div>
        <% if admin_signed_in? %>
          <div class="col-9">
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
          </div>
        <% end %>
      </div>
    </div>
  </header>
  <%= yield %>
</body>
</html>