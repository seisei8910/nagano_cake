<!DOCTYPE html>
<html>
<head>
  <title>Admin - NaganoCake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/bd90a16fee.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <div class="container">
      <div class="row mt-5">
        <div class="col-3">
          <h1 class="border border-dark my-5 text-center">LOGO</h1>
        </div>
        <% if admin_signed_in? %>
          <div class="col-9">
            <div class="row mt-4">
              <div class="col-12">
                <ul class="list-group list-group-horizontal list-unstyled justify-content-end">
                  <li class="list-group-item border-0">
                    <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary" %>
                  </li>
                  <li class="list-group-item border-0">
                    <%= link_to "会員一覧", admin_root_path, class: "btn btn-outline-secondary" %>
                  </li>
                  <li class="list-group-item border-0">
                    <%= link_to "注文履歴一覧", admin_root_path, class: "btn btn-outline-secondary px-0" %>
                  </li>
                  <li class="list-group-item border-0">
                    <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary px-0" %>
                  </li>
                  <li class="list-group-item border-0 pr-0">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary" %>
                  </li>
                </ul>
              </div>
              <div class="col-4 offset-8">
                <%= form_with url: admin_items_path, method: :get do |f| %>
                  <%= f.text_field :name %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </header>
  <%= yield %>
</body>
</html>