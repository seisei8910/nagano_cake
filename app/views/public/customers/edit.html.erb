<div class="container">
  <div class="row">
    <h3 class="bg-light px-4 m-5">会員情報編集</h3>
  </div>
  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-2">
        <p class="my-1">氏名</p>
        <p class="mt-4">フリガナ</p>
        <%= f.label :postal_code, "郵便番号", class: "mt-2" %>
      </div>
      <div class="col-3">
        <%= f.text_field :last_name, autofocus: true, placeholder:"姓", class: "form-control" %>
        <%= f.text_field :last_name_kana, autofocus: true,  placeholder:"セイ", class: "form-control mt-2" %>
        <%= f.text_field :postal_code, autofocus: true, placeholder:"0001111(ハイフンなし)", class: "form-control mt-2" %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name, autofocus: true, placeholder:"名", class: "form-control" %>
        <%= f.text_field :first_name_kana, autofocus: true, placeholder:"メイ", class: "form-control mt-2" %>
      </div>
    </div>
    <div class="row">
      <div class="col-2">
        <%= f.label :address, "住所", class: "mt-3" %>
      </div>
      <div class="col-7">
        <%= f.text_field :address, autofocus: true, placeholder:"東京都新宿区西新宿1-1-1 ○○マンション101号室", class: "form-control mt-1" %>
      </div>
    </div>
    <div class="row">
      <div class="col-2">
        <%= f.label :telephone_number, "電話番号", class: "mt-2" %>
        <%= f.label :email, "メールアドレス", class: "mt-3" %>
      </div>
      <div class="col-3">
        <%= f.text_field :telephone_number, autofocus: true, placeholder:"08012345678(ハイフンなし)", class: "form-control" %>
        <%= f.text_field :email, autofocus: true, placeholder:"hoge@example.com", class: "form-control mt-2" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-4 offset-2">
        <%= f.submit "編集内容を保存", class: "btn btn-success px-5" %>
      </div>
      <div class="col-2 offset-1">
        <%= link_to "退会する", customers_unsubscribe_path(@customer), class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>