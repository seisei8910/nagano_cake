<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <p>氏名</p>
  <%= f.text_field :last_name, autofocus: true, id:"inputLastName", placeholder:"姓" %>
  <%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"名" %>
  <p>フリガナ</p>
  <%= f.text_field :last_name_kana, autofocus: true, id:"inputLastNameKana", placeholder:"セイ" %>
  <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder:"メイ" %>
  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder:"0001111(ハイフンなし)" %>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"東京都新宿区西新宿1-1-1 ○○マンション101号室" %>
  <%= f.label :telephone_number, "電話番号" %>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", placeholder:"08012345678(ハイフンなし)" %>
  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"hoge@example.com" %>
  <%= f.submit "編集内容を保存" %>
  <%= link_to "退会する", customers_unsubscribe_path(@customer) %>
<% end %>