<div class="container">

  <div class="row">
    <div class="offset-2">
      <h2 class="bg-light mt-5 mb-5 px-4">マイページ</h2>
    </div>
  </div>

  <div class="row mb-4">
    <h3 class="font-weight-bold mb-0">登録情報</h3>
    <% if @customer == current_customer %>
      <%= link_to "編集する", customers_infomation_edit_path(@customer), class: "btn btn-success ml-5 px-4" %>
    <% end %>
  </div>

  <div class="row mb-5">
    <div class="col-2 bg-light p-0">
      <p class="border border-dark m-0 pl-1 py-2">氏名</p>
      <p class="border-right border-left border-dark m-0 pl-1 py-2">カナ</p>
      <p class="border border-dark m-0 pl-1 py-2">郵便番号</p>
      <p class="border-right border-left border-dark m-0 pl-1 py-2">住所</p>
      <p class="border border-dark m-0 pl-1 py-2">電話番号</p>
      <p class="border-right border-bottom border-left border-dark m-0 pl-1 py-2">メールアドレス</p>
    </div>
    <div class="col-6 p-0">
      <p class="border-top border-right border-bottom border-dark m-0 pl-1 py-2"><%= @customer.last_name %> <%= @customer.first_name %></p>
      <p class="border-right border-dark m-0 pl-1 py-2"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></p>
      <p class="border-top border-right border-bottom border-dark m-0 pl-1 py-2"><%= @customer.postal_code %></p>
      <p class="border-right border-dark m-0 pl-1 py-2"><%= @customer.address %></p>
      <p class="border-top border-right border-bottom border-dark m-0 pl-1 py-2"><%= @customer.telephone_number %></p>
      <p class="border-right border-bottom border-dark m-0 pl-1 py-2"><%= @customer.email %></p>
    </div>
  </div>

  <div class="row mb-4">
    <h3 class="font-weight-bold mb-0">配送先&emsp;</h3>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary ml-5 px-4" %>
  </div>

  <div class="row">
    <h3 class="font-weight-bold  mb-0">注文履歴</h3>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary ml-5 px-4" %>
  </div>

</div>