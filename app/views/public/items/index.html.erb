<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, items_path(genre_name: genre.name) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<h1>商品一覧</h1>
<p>全<%= @items.total_count %>件</p>
<% @items.each do |item| %>
  <div>
    <%= link_to item_path(item.id) do %>
      <%=image_tag item.get_image(300,200) %>
      <p><%= item.name %></p>
      <p>¥<%= item.with_tax_price %></p>
    <% end %>
  </div>
<% end %>
<%= paginate @items %>