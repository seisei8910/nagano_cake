<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, items_path(genre_name: genre.name) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
