<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-2">
        <p>名前</p>
        <p>フリガナ</p>
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-1">
        <%= f.label :last_name, "(姓)" %>
        <%= f.label :last_name_kana, "(セイ)" %>
      </div>
      <div class="col-4">
        <%= f.text_field :last_name %>
        <%= f.text_field :last_name_kana %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="col-1">
        <%= f.label :first_name, "(名)" %>
        <%= f.label :first_name_kana, "(メイ)" %>
      </div>
      <div class="col-4">
        <%= f.text_field :first_name %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-4">
        <%= f.text_field :postal_code %>
      </div>
    </div>

    <div class="row">
      <div class="col-2">
        <%= f.label :address, "住所" %>
      </div>
      <div class="col-9 offset-1">
        <%= f.text_field :address %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br>
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
      </div>
      <div class="col-4">
        <%= f.text_field :telephone_number %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <h2>既に登録済みの方</h2>
  </div>
  <div class="row">
    <p><%= render "public/shared/links" %>からログインしてください。</p>
  </div>
</div>