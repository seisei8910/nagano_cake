<div class="container">

  <div class="row">
    <h2 class="bg-light px-4 my-5">ログイン</h2>
  </div>
  <div class="row">
    <h4 class="bg-light px-4 ml-4">会員の方はこちらからログイン</h4>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-2 offset-2">
        <%= f.label :email, "メールアドレス", class: "my-5" %>
        <%= f.label :password, "パスワード" %>
      </div>

      <div class="col-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-5" %><br>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary px-5 my-5" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <h4 class="bg-light px-4 m-4">会員登録がお済みでない方</h4><br>
  </div>
    <div class="row">
      <div class="col-6 offset-2">
        <p><%= render "public/shared/links" %>から新規登録を行なってください。</p>
      </div>
    </div>
</div>